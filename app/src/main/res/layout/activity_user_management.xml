<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Título en la barra superior -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Management"
        android:gravity="start|center_vertical"
        android:background="#6200EE"
        android:textColor="#FFFFFF"
        android:padding="16dp"
        android:textSize="18sp" />

    <!-- Botón NEW USER -->
    <Button
        android:id="@+id/newUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="NEW USER"
        android:background="#E0E0E0" />

    <!-- Spinner para seleccionar usuario -->
    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newUser"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="User:"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/userspinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newUser"
        android:layout_toEndOf="@id/user"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp" />

    <!-- Botón UPDATE USER -->
    <Button
        android:id="@+id/updateUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userspinner"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="UPDATE USER"
        android:background="#E0E0E0" />

    <!-- Botón DELETE USER -->
    <Button
        android:id="@+id/deleteUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateUser"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="DELETE USER"
        android:background="#E0E0E0" />

    <!-- Botón LIST USERS -->
    <Button
        android:id="@+id/listUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteUser"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="LIST USERS"
        android:background="#E0E0E0" />

    <!-- Botón BACK -->
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="BACK"
        android:background="#E0E0E0" />

</RelativeLayout>
